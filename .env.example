# Server Configuration
PORT=3000
HOST=0.0.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=tavily_user
DB_PASSWORD=your_password_here
DB_NAME=tavily_load
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=300

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# Migration Configuration
MIGRATE_UP=true
MIGRATION_PATH=migrations

# API Keys Configuration (Legacy - now stored in database)
KEYS_FILE=keys.txt
START_INDEX=0

# Load Balancing & Error Handling
BLACKLIST_THRESHOLD=1
MAX_RETRIES=3
MAX_CONCURRENT_REQUESTS=100

# Tavily API Configuration
TAVILY_BASE_URL=https://api.tavily.com
REQUEST_TIMEOUT=30
RESPONSE_TIMEOUT=30
IDLE_CONN_TIMEOUT=120

# Authentication (Optional)
AUTH_KEY=

# CORS Configuration
ENABLE_CORS=true
ALLOWED_ORIGINS=*
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*
ALLOW_CREDENTIALS=false

# Compression
ENABLE_GZIP=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=text
LOG_ENABLE_FILE=false
LOG_FILE_PATH=logs/app.log
LOG_ENABLE_REQUEST=true

# Server Timeouts
SERVER_READ_TIMEOUT=120
SERVER_WRITE_TIMEOUT=1800
SERVER_IDLE_TIMEOUT=120
SERVER_GRACEFUL_SHUTDOWN_TIMEOUT=60

# Usage Tracking Configuration
ENABLE_USAGE_TRACKING=true
USAGE_UPDATE_INTERVAL=300
DEFAULT_SELECTION_STRATEGY=round_robin
AUTO_STRATEGY_OPTIMIZATION=false

# Cache Configuration
CACHE_USAGE_TTL=300
CACHE_ANALYTICS_TTL=600
CACHE_STATS_TTL=120
CACHE_BLACKLIST_TTL=3600
